<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <!--自分の時はフォロできないようにする-->
      <% if user_signed_in? && current_user != @user %>
      <!--フォローできるように設定する-->
      <% if current_user.active_relationships.exists?(target_user_id: @user.id) %>
        <%= link_to 'unfollow', [@user, :follow], method: :delete %>
      <% else %>
       <%= link_to 'follow', [@user, :follow], method: :post%>
      <% end %>
      <% end %>


      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>

      <%= render 'books/index',books: @books %>

            <table class="table table-bordered">
      <h2 style="font-weight: normal;">投稿数の前日比・前週比</h2>
        <thead>
          <th>今日の投稿数</th>
          <th>前日の投稿数</th>
          <th>前日比</th>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= @user_today_books.count %>
            </td>
            <td>
              <%= @user_yesterday_books.count %>
            </td>
            <td>
              <% if @user_yesterday_books.count == 0 %>
                  前日までの投稿が0のため計測不可
              <% else %>
              　<% @day_before = @user_today_books.count / @user_yesterday_books.count.to_f  %>
              　<%= (@day_before * 100).round %>%
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>


      <table class="table table-bordered">
        <thead>
          <th>今週の投稿数</th>
          <th>先週の投稿数</th>
          <th>前週比</th>
        </thead>
        <tbody>
          <tr>
            <td><%= @user_thisweek.count %></td>
            <td><%= @user_lastweek.count %></td>
            <td>
              <% if @user_lastweek.count == 0 %>
                  前週までの投稿が0のため計測不可
              <% else %>
                <% @week_before = @user_thisweek.count / @user_lastweek.count.to_f  %>
                <%= (@week_before * 100).round %>%
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

    </div>

  </div>
</div>

