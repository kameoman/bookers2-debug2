<% book.post_comments.each do |post_comment| %>
   <tr>
    <td><%= attachment_image_tag(post_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg")  %><br>
    <%= link_to user_path(post_comment.user) do %>
    <%= post_comment.user.name %><br>
    <% end %>
    </td>
    <td><%= post_comment.comment %></td>
    
    <% if post_comment.user == current_user %>
    <td><%= link_to "削除", book_post_comment_path(post_comment.book, post_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
    <% end %>
   </tr>
 <% end %>
